<div class="card card-bordered border-2">
  <div class="card-body prose">
    <h2 class="card-title">Name</h2>
    <p><%= @category.name %></p>

    <div class="card-actions justify-end">
      <%= link_to "Edit", edit_category_path(@category), class: "btn btn-primary btn-sm" %>
      <%= button_to "Delete", @category, method: :delete, class: "btn btn-error btn-sm" %>
      <%= link_to "Tasks in this category", category_tasks_path(@category), class: "btn btn-info btn-sm" %>
      <%= link_to "Back to categories", categories_path, class: "btn btn-ghost btn-sm" %>
    </div>
  </div>
</div>

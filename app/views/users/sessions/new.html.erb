<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full max-w-xs", novalidate: true }) do |f| %>
  <%= render "users/shared/flashes" %>
  <div class="flex flex-col gap-2 w-full">
    <div class="field form-control">
      <%= f.label :email, class: "label" do %>
        <span class="label-text">Email</span>
      <% end %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
    </div>
    
    <div class="field form-control">
      <%= f.label :password, class: "label" do %>
        <span class="label-text">Password</span>
      <% end %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full" %>
    </div>
    
    <% if devise_mapping.rememberable? %>
      <div class="field form-control">
        <%= f.label :remember_me, class: "label cursor-pointer" do %>
          <span class="label-text">Remember me</span>
          <%= f.check_box :remember_me, class: "checkbox checkbox-xs checkbox-primary" %>
        <% end %>
      </div>
    <% end %>
    
    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary btn-block mt-2" %>
    </div>

    <div class="flex flex-col align-start w-full">
      <span>
        Don't have an account yet?
        <%= link_to "Sign up", new_registration_path(resource_name), class: "link link-hover" %>
      </span>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link link-hover" %> </div>
  </div>
<% end %>

